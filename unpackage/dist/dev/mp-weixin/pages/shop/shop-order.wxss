
/*去掉按钮边框*/
button:after{ border: none;
}
.item-index{
  width: 25vw;
  height: 50px;
  line-height: 50px;
  border-radius: 0px;
  text-align: center;
  color: #000000;
  font-size: 16px;
  background-color: #ffffff;
}
.item-index.active{
  border-bottom: 1px solid #ff5a00;
}
.list-box {
  margin-top: 10px;
  background-color: #ffffff;
  padding: 10px;
  border: 1px solid #cccccc;
}
.list-box .image-box{
  width: 50px;
  height: 50px;
}
.list-box .image-box image{
  width: 100%;
  height: 100%;
}
.info-box {
  width: 100%;
  margin-left: 10px;
}
.option-button {
  width: 100px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: #ff5a00;
  font-size: 16px;
  border-radius: 0px;
  background-color: #ffffff;
}
